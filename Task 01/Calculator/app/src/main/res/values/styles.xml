<resources>

    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:background">@drawable/bg_button_number</item>
    </style>

    <style name="CalcButton.Operator">
        <item name="android:background">@drawable/bg_button_operator</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CalcButton.Equals">
        <item name="android:background">@drawable/bg_button_equals</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CalcButton.Clear">
        <item name="android:background">@drawable/bg_button_clear</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>